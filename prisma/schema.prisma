// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Meal {
    id Int @id @default(autoincrement())

    name         String
    description  String?
    protein      Float
    fat          Float
    carbohydrate Float
    calories     Float

    ingredients Ingredient[]
}

model Ingredient {
    id Int @id @default(autoincrement())

    name         String
    description  String
    protein      Float
    fat          Float
    carbohydrate Float
    calories     Float
    weight       Int

    Meal   Meal? @relation(fields: [mealId], references: [id])
    mealId Int?
}
